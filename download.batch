#!/bin/bash
#SBATCH --job-name=bnf-download
#SBATCH --output=logs/download_%A_%a.out
#SBATCH --error=logs/download_%A_%a.err
#SBATCH --array=1-7
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=1
#SBATCH --mem=2G
#SBATCH --time=7-00:00:00

# Load necessary modules (if any)
# module load python/3.x

# Activate your virtual environment if needed
source env/bin/activate

# Run the script with the current task ID
python worker-single-download.py --index ${SLURM_ARRAY_TASK_ID} --max 7